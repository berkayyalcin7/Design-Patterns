@model ErrorViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Design Pattern Login </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            background: white;
        }

        .login-container {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
        }

        .brand-panel {
            grid-column: span 8;
            background: #369EE3;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 60px;
        }

        .brand-content {
            max-width: 600px;
            color: white;
            position: relative;
            z-index: 2;
        }

            .brand-content img {
                width: 250px;
                margin-bottom: 40px;
            }

            .brand-content h1 {
                font-size: 42px;
                font-weight: 300;
                margin-bottom: 24px;
                line-height: 1.2;
                letter-spacing: -0.5px;
            }

            .brand-content p {
                font-size: 18px;
                line-height: 1.6;
                opacity: 0.9;
            }

        .login-panel {
            grid-column: span 4;
            background: #f8fafc;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px;
        }

        .login-box {
            width: 100%;
            max-width: 380px;
        }

        .login-header {
            margin-bottom: 40px;
        }

            .login-header h2 {
                color: #1e293b;
                font-size: 28px;
                font-weight: 500;
                margin-bottom: 12px;
                letter-spacing: -0.3px;
            }

            .login-header p {
                color: #64748b;
                font-size: 15px;
                line-height: 1.5;
            }

        .form-group {
            margin-bottom: 24px;
        }

            .form-group label {
                display: block;
                color: #334155;
                font-size: 14px;
                font-weight: 500;
                margin-bottom: 8px;
            }

            .form-group input {
                width: 100%;
                height: 48px;
                padding: 0 16px;
                border: 1px solid #e2e8f0;
                border-radius: 6px;
                font-size: 15px;
                color: #1e293b;
                background: white;
                transition: all 0.2s ease;
            }

                .form-group input:hover {
                    border-color: #cbd5e1;
                }

                .form-group input:focus {
                    outline: none;
                    border-color: #002244;
                    box-shadow: 0 0 0 3px rgba(0,34,68,0.1);
                }

        .login-btn {
            width: 100%;
            height: 48px;
            background: #002244;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 8px;
        }

            .login-btn:hover {
                background: #003366;
            }

            .login-btn:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(0,34,68,0.1);
            }

        .error-message {
            margin-top: 16px;
            padding: 12px;
            background: #fef2f2;
            border: 1px solid #fee2e2;
            border-radius: 6px;
            color: #dc2626;
            font-size: 14px;
            display: none;
        }

        @@media (max-width: 1200px) {
            .login-container {
                grid-template-columns: 1fr;
            }

            .brand-panel {
                min-height: auto;
                padding: 40px 20px;
                text-align: center;
            }

            .brand-content {
                max-width: 400px;
            }

                .brand-content h1 {
                    font-size: 32px;
                }

            .login-panel {
                padding: 40px 20px;
            }
        }

        .login-logos {
            margin-bottom: 15px;
            margin-top: -50px;
            text-align: center;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px; /* Logolar arası boşluğu biraz azalttım */
        }

        .company-logo {
            height: auto;
            object-fit: contain;
        }

        .bizigo-logo {
            width: 100px; /* Bizigo logosu için özel genişlik */
        }

        .tatilsepeti-logo {
            width: 120px; /* Tatil Sepeti logosu için özel genişlik */
        }

        .password-container {
            position: relative;
        }

            .password-container input {
                width: 100%;
                padding-right: 100px;
            }

            .password-container #togglePassword {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
                font-size: 0.9em;
                color: #007bff;
                user-select: none;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand-panel">
            <div class="brand-content">
       @*          <img src="~/assets/images/ykk_white_logo.png" alt="YKK Logo"> *@
                <h1>Identity LOGIN SYSTEM</h1>
                <p>Design Pattern Login</p>
            </div>
        </div>

        <div class="login-panel">
            <div class="login-box">


                <div class="login-header">
                    <h2>Login</h2>
                    <p>Access the system with your Windows credentials</p>
                </div>

              @*   @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div style="background-color: #f8d7da;
                color: #721c24;
                padding: 12px 15px;
                border-radius: 4px;
                margin-bottom: 15px;
                border: 1px solid #f5c6cb;
                font-size: 14px;
                text-align: center;">
                        @Model.ErrorMessage
                    </div>
                } *@

                <div id="loginForm">
                    <form method="post" asp-action="Login" asp-controller="Account">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="Email" name="Email" autocomplete="off" spellcheck="false" required>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <div class="password-container" style="position: relative;">
                                <input type="password" id="password" name="Password" style="width: 100%; padding-right: 100px;" required>
                                <span id="togglePassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer; font-size: 0.9em; color: #007bff; -webkit-user-select: none; -moz-user-select: none; -ms-user-select: none; user-select: none;">
                                    Show Password
                                </span>
                            </div>
                        </div>

                        <button type="submit" class="login-btn" id="loginBtn">
                            Log in
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>


    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
             const passwordField = document.getElementById("password");
             const toggleText = this;

             // Şifre alanının tipini değiştir ve metni güncelle
             if (passwordField.type === "password") {
                 passwordField.type = "text";
                 toggleText.textContent = "Hide Password"; // Şifre gösteriliyorken
             } else {
                 passwordField.type = "password";
                 toggleText.textContent = "Show Password"; // Şifre gizliyken
             }
         });
    </script>
</body>
</html>